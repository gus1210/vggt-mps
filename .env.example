# VGGT MPS Configuration
# Copy this file to .env and update with your settings

# Model Configuration
MODEL_PATH=models/vggt_model.pt
# Or use HuggingFace model ID
# HF_MODEL_ID=facebook/VGGT-1B

# Data Directories
DATA_DIR=data
OUTPUT_DIR=outputs
MODEL_DIR=models

# Device Configuration
# Options: mps, cuda, cpu, auto
DEVICE=auto

# Sparse Attention Settings
USE_SPARSE_ATTENTION=true
COVISIBILITY_THRESHOLD=0.7

# Web Interface Settings
WEB_PORT=7860
WEB_SHARE=false

# HuggingFace Settings (optional)
# HF_TOKEN=your_token_here

# Debug Settings
DEBUG=false
VERBOSE=false